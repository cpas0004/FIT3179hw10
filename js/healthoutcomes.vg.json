{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Dispensed repiratory medications per state during the 2019/20 bushfires",
        "fontSize": 24     
    },
    "width": 900,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179hw10/main/data/dispensed.csv",
        "format": {"type": "csv", "parse": {"Date": "date:'%d/%m/%Y'"}}
    },
    "transform": [
        {
            "calculate": "'Week ending ' + timeFormat(datum.Date, '%d/%m/%Y')",
            "as": "WeekEnding"
        }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "axis": {"title": "Date"}
      },
      "y": {
        "field": "Dispensed",
        "type": "quantitative",
        "axis": {"title": "Dispensed Respiratory Prescriptions"}
      },
      "color": {
        "field": "State",
        "type": "nominal",
        "legend": {"title": "State"},
        "sort": ["NSW", "VIC", "QLD", "SA", "WA", "TAS", "NT", "ACT"]
      },
      "tooltip": [
      {"field": "WeekEnding", "type": "nominal", "title": "Date"},
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Dispensed", "type": "quantitative", "title": "Dispensed Respiratory Prescriptions"}
    ]
      
    }
}